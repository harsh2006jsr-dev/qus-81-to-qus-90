Q89: Count frequency of a given character in a string.

/*
Sample Test Cases:
Input 1:
programming
g
Output 1:
2

*/
#include <stdio.h>
#include <string.h>
int countCharacterFrequency(char *str, char target) 
{
    int count = 0;
    int i = 0;
    while (str[i] != '\0') 
    {
        if (str[i] == target) 
        {
            count++;
        }
        i++;
    }
    return count;
}
int main() 
{
    char str[100];
    char targetChar;
    printf("Enter a string: ");
    scanf("%s", str);
    printf("Enter the character to count: ");
    scanf(" %c", &targetChar);
    int frequency = countCharacterFrequency(str, targetChar);  
    printf("%d\n", frequency);
    return 0;
}